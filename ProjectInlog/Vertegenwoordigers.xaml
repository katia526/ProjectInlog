<Window x:Class="ProjectInlog.Vertegenwoordigers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectInlog"
        mc:Ignorable="d"
        Title="Verkopers" Height="450" Width="800">
    <Grid>
        <Border x:Name="bdrVerkoper" Width="400"   Height="300" BorderThickness="2" BorderBrush="Black"></Border>
        <StackPanel Width="400" HorizontalAlignment="Center" Height="300">
            <Label Content="Verkoper" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator/>
           
            <Button x:Name="btnExit" Content="Exit" Width="60" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,170,0,10" Click="btnExit_Click"></Button>
            
        </StackPanel>
        
    </Grid>
</Window>
